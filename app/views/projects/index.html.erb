<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Projects</h1>
  <% if user_signed_in? %>
    <%= link_to 'New project', new_project_path, class: 'btn btn-primary pull-right' %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>URL</th>
      <th>Collection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.description %></td>
        <td><%= project.url %></td>
        <td><%= link_to project.collection.name, project.collection %></td>
        <td><%= link_to 'Update', update_from_github_project_path(project), method: :put %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Remove', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
